<h2>Create New Event</h2>
<%= form_for @event do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br />
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :location %><br />
    <%= form.text_field :location %>
  </div>

  <p><%= form.submit %></p>
<% end %>
