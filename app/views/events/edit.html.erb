<h2>Edit <%= @event.name %></h2>

<%= form_for @event do |form| %>
  <div>
    <%= form.label :name %><br />
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br />
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :location %><br />
    <%= form.text_field :location %>
  </div>

  <p><%= form.submit %></p>
<% end %>
